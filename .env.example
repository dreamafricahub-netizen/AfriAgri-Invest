# Database (Supabase PostgreSQL)
DATABASE_URL="postgresql://postgres.[ref]:[password]@aws-0-eu-central-1.pooler.supabase.com:6543/postgres"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your_secret_key_here"

# Cron Security (for daily gains API)
# Use this secret when calling /api/cron/daily-gains?secret=YOUR_SECRET
CRON_SECRET="your_cron_secret_here"

# Supabase Storage (for file uploads in production)
# Get these from your Supabase project settings > API
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_SERVICE_KEY="your_supabase_service_role_key"
